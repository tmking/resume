!!!
%html(xmlns="http://www.w3.org/1999/xhtml")
  %head
    %meta(content='text/html; charset=utf-8' http-equiv='Content-Type')/
    %title= @item[:title]
    %link(href="common.css" rel="stylesheet" type="text/css" media="print, screen")/
    %link(href="print.css" rel="stylesheet" type="text/css" media="print")/
    %script(src='/jquery.min.js' type='text/javascript')
    %script(src='/jquery.cycle.all.min.js' type='text/javascript')
    %script(src='/jquery-corners.js' type='text/javascript')
    %script(type="text/javascript" src="/cufon-yui.js")
    %script(src='/moderna_400.font.js' type='text/javascript')
    :javascript
      Cufon.replace('#header h1, h2');


  %body
    #container
      #header
        .inner
          %h1 Timothy M. King
          %address
            3318 Georgia Ave NW #11<br/>
            Washington, DC 20010<br/>
            (202) 713-9472<br/>
            %a(href='&#109;&#97;&#105;&#108;&#116;&#111;&#58;&#116;&#109;&#107;&#64;&#112;&#108;&#97;&#46;&#116;&#111;') &#101;&#109;&#97;&#105;&#108;
            \/ #{link_to 'github', 'http://github.com/lordzork'}

          %h2 Ruby on Rails Web Developer

      #content.display= yield
      #content.print= yield

      #footer
        %p.display Made with nanoc, haml and sass.
        %p.print A more recent version of this document may be available at http://resume.pla.to/

:javascript
  $(document).ready(function(){
    $('#content').corner();

    $('#content.display').before('<ul id="menu">').cycle({
      fx: 'fade',
      timeout: 0,
      pager:  '#menu',
      pagerAnchorBuilder: function(idx, slide) {
        var text = $('h2', slide).html();
        return '<li><a href="#">' + text + '</a></li>';
      }
    });
  $('#menu').corner();
  });